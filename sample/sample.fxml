<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/15.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #91cfc3;">
            <children>
                <TextArea fx:id="textArea" editable="false" layoutX="100.0" layoutY="200.0" prefColumnCount="2"
                          prefHeight="200.0" prefWidth="200.0" scrollTop="1000.0" wrapText="true"
                          AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="60.0">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                </TextArea>
                <TextField fx:id="textField" layoutX="14.0" layoutY="545.0" onKeyPressed="#enterSend"
                           style="-fx-background-color: #ffffff;" AnchorPane.bottomAnchor="20.0"
                           AnchorPane.leftAnchor="7.0" AnchorPane.rightAnchor="115.0" AnchorPane.topAnchor="548.0">
                    <effect>
                        <InnerShadow choke="0.43">
                            <color>
                                <Color red="0.34117648005485535" green="0.6000000238418579" blue="0.5529412031173706"/>
                            </color>
                        </InnerShadow>
                    </effect>
                </TextField>
                <Button fx:id="buttonSend" layoutX="319.0" layoutY="555.0" minWidth="100.0" mnemonicParsing="false"
                        onAction="#initialize" onKeyPressed="#initialize" onMouseEntered="#buttonAnimated"
                        onMouseExited="#buttonFree" prefWidth="100.0" style="-fx-background-color: #57998d;"
                        text="Отправить" textFill="#fffefe" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="300.0"
                        AnchorPane.rightAnchor="7.0" AnchorPane.topAnchor="547.0">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Label layoutX="150.0" layoutY="8.0" prefHeight="48.0" prefWidth="87.0" style="-fx-border-color: black;"
                       text="T A L K" textFill="#070707" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="170.0"
                       AnchorPane.topAnchor="6.0">
                    <font>
                        <Font name="Browallia New Bold" size="36.0"/>
                    </font>
                </Label>
                <Label layoutX="230.0" maxHeight="14.0" prefHeight="14.0" prefWidth="21.0" text="Y" textFill="#d91d00"
                       AnchorPane.rightAnchor="147.0" AnchorPane.topAnchor="0.0">
                    <font>
                        <Font name="Browallia New Bold Italic" size="50.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</GridPane>
